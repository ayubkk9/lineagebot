<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<TabPane fx:id="tabPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lineagebot.BotUIController">
    <tabs>
        <Tab text="Основные настройки">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Label text="Имя персонажа:"/>
                    <TextField fx:id="characterNameField" prefWidth="200"/>
                    <Button fx:id="refreshCharactersButton" text="Найти окно" onAction="#detectGameWindow"/>
                </HBox>
                <ComboBox fx:id="characterComboBox" prefWidth="250"/>
                <Button fx:id="activateWindowButton" text="Активировать окно" onAction="#activateWindow"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="HP:" styleClass="label"/>
                    <TextField fx:id="hpDisplayField" editable="false" prefWidth="84"/>
                    <Label text="MP:" styleClass="label"/>
                    <TextField fx:id="mpDisplayField" editable="false" prefWidth="84"/>
                    <Label text="HP%:" styleClass="label"/>
                    <TextField fx:id="hpPercentField" promptText="0-100" prefWidth="84" styleClass="numeric-field"/>
                    <Label text="MP%:" styleClass="label"/>
                    <TextField fx:id="mpPercentField" promptText="0-100" prefWidth="84" styleClass="numeric-field"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Char HP Bar:" styleClass="label"/>
                    <TextField fx:id="hpBarField" promptText="x,y,width,height" prefWidth="120"/>
                    <Button fx:id="selectHpBarButton" text="Выбрать" onAction="#selectHpBar" styleClass="button"/>
                    <Label text="MP Bar:" styleClass="label"/>
                    <TextField fx:id="mpBarField" promptText="x,y,width,height" prefWidth="120"/>
                    <Button fx:id="selectMpBarButton" text="Выбрать" onAction="#selectMpBar" styleClass="button"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="HP моба:"/>
                    <TextField fx:id="mobHpBarField" prefWidth="150"/>
                    <Button fx:id="selectMobHpBarButton" text="Выбрать полосу HP моба" onAction="#selectMobHpBar"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Порт Arduino:"/>
                    <ComboBox fx:id="arduinoPortComboBox" prefWidth="150"/>
                </HBox>
                <HBox spacing="10">
                    <Button fx:id="saveSettingsButton" text="Сохранить настройки" onAction="#saveSettings"/>
                    <Button fx:id="loadSettingsButton" text="Загрузить настройки" onAction="#loadSettings"/>
                </HBox>
                <HBox spacing="10">
                    <Button fx:id="startButton" text="Старт (F5)" onAction="#startBot"/>
                    <Button fx:id="stopButton" text="Стоп (F6)" onAction="#stopBot"/>
                </HBox>
            </VBox>
        </Tab>
        <Tab text="Действия">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Label text="Тип действия:"/>
                    <ComboBox fx:id="actionTypeComboBox" prefWidth="150"/>
                    <Label text="Клавиши:"/>
                    <TextField fx:id="keysField" prefWidth="150"/>
                </HBox>
                <HBox spacing="10">
                    <Button fx:id="addActionButton" text="Добавить" onAction="#addAction"/>
                    <Button fx:id="editActionButton" text="Редактировать" onAction="#editAction"/>
                    <Button fx:id="deleteActionButton" text="Удалить" onAction="#deleteAction"/>
                </HBox>
                <TableView fx:id="actionsTable">
                    <columns>
                        <TableColumn fx:id="actionTypeColumn" text="Тип действия" prefWidth="150"/>
                        <TableColumn fx:id="keysColumn" text="Клавиши" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        <Tab text="Скиллы">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Label text="Класс персонажа:"/>
                    <ComboBox fx:id="classComboBox" prefWidth="200"/>
                </HBox>
                <HBox spacing="10"> 
                    <Label text="Название скилла:"/>
                    <TextField fx:id="newSkillNameField" prefWidth="150"/>
                    <Label text="Тип скилла:"/>
                    <ComboBox fx:id="newSkillTypeCombo" prefWidth="150"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="MP скилла:"/>
                    <TextField fx:id="newSkillMpField" prefWidth="60"/>
                    <Label text="Перезарядка (мс):"/>
                    <TextField fx:id="newSkillCooldownField" prefWidth="60"/>
                    <Label text="Клавиши:"/>
                    <TextField fx:id="newSkillKeysField" prefWidth="100"/>
                </HBox>
                <HBox spacing="10">
                    <Button fx:id="addSkillButton" text="Добавить скилл" onAction="#addSkill"/>
                    <Button fx:id="editSkillButton" text="Редактировать скилл" onAction="#editSkill"/>
                    <Button fx:id="deleteSkillButton" text="Удалить скилл" onAction="#deleteSkill"/>
                </HBox>
                <TableView fx:id="availableSkillsTable">
                    <columns>
                        <TableColumn fx:id="skillNameColumn" text="Название" prefWidth="150"/>
                        <TableColumn fx:id="skillTypeColumn" text="Тип" prefWidth="100"/>
                        <TableColumn fx:id="skillMpColumn" text="MP" prefWidth="60"/>
                        <TableColumn fx:id="skillCooldownColumn" text="Перезарядка" prefWidth="100"/>
                        <TableColumn fx:id="skillKeysColumn" text="Клавиши" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        <Tab text="Логи">
            <TextArea fx:id="logArea" editable="false" wrapText="true"/>
        </Tab>
    </tabs>
</TabPane>